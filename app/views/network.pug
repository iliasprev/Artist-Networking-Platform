doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Networking - GrooveGrid
    link(rel="stylesheet", href="styles.css")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin="")
    link(href="https://fonts.googleapis.com/css2?family=Kumbh+Sans:wght@100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap", rel="stylesheet")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
  body
    header
      // Include your header content
    nav.navbar
      .navbar__container
        a#navbar__logo(href="/homepage")
          img.logo-image(src="images/mylogogr.png", alt="GrooveGrid Logo")
          | GrooveGrid
        .navbar_toggle#mobile-menu
          span.bar
          span.bar
          span.bar
        ul.navbar__menu
          li.navbar__item
            a.navbar__links(href="homepage") Home
          li.navbar__item
            a.navbar__links(href="newsubplan") Promote
          li.navbar__item
            a.navbar__links(href="network") Network
          li.navbar__item
            a.navbar__links(href="newsubplan") Opportunities
          li.navbar__item
            a.navbar__links(href="ourstory") Our story
          li.navbar__btn
            a.button(href="signin") Sign in/Sign Up

    // Main Networking Section
    .networking
      .networking__container
        .networking__content
          h1 Welcome to the Networking Section
          p Discover and connect with other artists and industry professionals.
        .networking__img--container

    // Community and Database Access Sections
    .sections
      .section-container
        // DJ Community Section
        .section.community
          a.section-link(href="https://discord.gg/your-discord-link", target="_blank")
            img.section-image(src="images/discord12.jpg", alt="Join Our Discord")
          .section-content
            h2 Join Our DJ Community
            p Our DJ community is vibrant and full of passionate artists, talent bookers, and industry professionals. Join us on Discord to connect with fellow DJs, discuss your music, get feedback, and stay updated on the latest opportunities and events.

        // Database Access Section
        .section.database-access
          a.section-link(href="payment")
            img.section-image(src="images/undraw_To_the_moon_re_q21i.png", alt="Unlock Database")
          .section-content
            h2 Unlock Our Exclusive Database
            p Gain access to our extensive database of venues, talent bookers, and industry contacts by subscribing to our service. Start your journey today by clicking the link below.
            p 5.99Â£ Monthly subscription
            a.database-access__btn(href="payment") Subscribe Now

    // Footer Section
    footer
      .footer__container
        .footer__links
          .footer__link--wrapper
            .footer__link--items
              h2 About Us
              a(href="opportunities") Opportunities
            .footer__link--items
              h2 Contact
              a(href="contact-us") Contact us
              a(href="feedback") Feedback
              a(href="https://discord.gg/GRETNfevqc", target="_blank") Join our Discord
          .footer__link--wrapper
            //- .footer__link--items
            //-   h2 Opportunities
            //-   a(href="about") Charity pop ups
            .footer__link--items
              h2 Legal
              a(href="privacy-policy") Privacy Policy
              a(href="cookie-policy") Cookie Policy
              a(href="terms-of-use") Terms of Use

        .footer__bottom
          .footer__logo
            a#footer__logo(href="/")
              img.footer__logo--img(src="images/mylogogr.png", alt="GrooveGrid Logo")
              span GROOVEGRID
          p.website__rights GrooveGrid 2024. All rights reserved.
          .social__icons
            a.social__icon--link(href="https://www.facebook.com/yourpage", target="_blank")
              i.fab.fa-facebook-f
            a.social__icon--link(href="https://twitter.com/yourprofile", target="_blank")
              i.fab.fa-twitter
            a.social__icon--link(href="https://www.instagram.com/yourprofile", target="_blank")
              i.fab.fa-instagram
            a.social__icon--link(href="https://www.linkedin.com/company/yourcompany", target="_blank")
              i.fab.fa-linkedin-in

    script(src="app.js")
