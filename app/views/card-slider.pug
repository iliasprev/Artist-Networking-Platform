  script.
    // JavaScript to check subscription and show/hide content
    document.addEventListener("DOMContentLoaded", function() {
      const isSubscribed = localStorage.getItem('subscribed') === 'true'; // Check subscription status
      const content = document.querySelector('.wrapper1');
      const restrictedText = document.getElementById('restricted-text');

      if (isSubscribed) {
        content.classList.remove('hidden');
        restrictedText.style.display = 'none';
      } else {
        restrictedText.style.display = 'block';
        content.classList.add('hidden');
      }
    })

