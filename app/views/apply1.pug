doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Sign Up Page
    link(rel="stylesheet", href="styles.css")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin="")
    link(href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap", rel="stylesheet")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
  body
    //- Menu Bar
    nav.navbar
      .navbar__container
        a(href="/", id="navbar__logo")
          img.logo-image(src="images/mylogogr.png", alt="GrooveGrid Logo")
          | GrooveGrid
        .navbar_toggle#mobile-menu
          span.bar
          span.bar
          span.bar
        ul.navbar__menu
          li.navbar__item
            a.navbar__links(href="homepage") Home
          li.navbar__item
            a.navbar__links(href="network") Network
          li.navbar__item
            a.navbar__links(href="opportunities") Opportunities
          li.navbar__item
            a.navbar__links(href="Ourstory") Our story
          li.navbar__btn
            a.button(href="signin") Sign in/Sign Up

    .form-wrapper.sign-up
      form(action="apply", method="POST")
        h2 Apply Below
        .input-group
          input(type="text", id="fullname",name="fullname",required)
          label(for="fullname") Full Name
        .input-group
          input(type="text", id="email",name="email",required)
          label(for="email") Email
        .input-group
          input(type="text", id="soundcloud_mix",name="soundcloud_mix",required)
          label(for="soundcloud_mix") Sound CLoud_Mix link
        .input-group
          input(type="text", id="instagram",name="instagram",required)
          label(for="instagram") Instagram Id
        .remember
          label
          input(type="checkbox", name="terms_conditions")
          |  I agree to the terms & conditions
        input.login-button(type="submit" value="Apply")

    script(src="app.js")
